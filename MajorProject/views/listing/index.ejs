<% layout("/layouts/boilerplate.ejs") %>
<body>

  <h2> &nbsp; &nbsp; &nbsp; &nbsp; &nbsp; &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp; &nbsp;&nbsp;&nbsp; All Prdouct</h2>
  
  <!-- <form method="GET" action="/listings/new">
        <button> Create New product</button>
    </form> -->

  <div class="row row-cols-lg-3 row-cols-md-2 row-cols-lg-1">
    <% for(let listing of allListing ) { %>
      <a href="listings/<%= listing._id %>" class="listing-link">
    <div class="card col">
      <img
        src="<%= listing.image %>"
        class="card-img-top"
        alt="listing_image"
        style="height: 20rem"
      />
      <div class="card-body">
        <p class="card-text">
         <b><%= listing.title %> </b> <br />
          &#8377; <%=listing.price%> 
        </p>
      </div>
    </div>
  </a>
    <% } %>
  </div>
</body>
