<% layout("/layouts/boilerplate.ejs") %> <br /><br />
<body>
  <div class="row">
    <div class="col-8 offset-2">
      <h2>Add Product</h2>
      <br />
      <form
        method="POST"
        action="/listings"
        novalidate
        class="needs-validation"
      >
        <div class="mb-3">
          <label for="title" class="form-label"> Product Name </label>
          <input
            name="listing[title]"
            placeholder="Product Name"
            type="string"
            class="form-control"
            required
          />
          <div class="invalid-feedback">Name Should be valid</div>
        </div>

        <div class="mb-3">
          <label for="title" class="form-label"> Description</label>
          <textarea
            name="listing[description]"
            placeholder="description"
            type="string"
            class="form-control"
          ></textarea>
          <div class="invalid-feedback">Description Should be valid</div>
        </div>

        <div class="mb-3">
          <label for="title" class="form-label"> Link </label>
          <input
            name="listing[image]"
            type="text"
            placeholder="Enter image URL/Link"
            class="form-control"
          />
        </div>

        <div class="row">
          <div class="mb-3 col-4">
            <label for="title" class="form-label"> Price</label>
            <input
              name="listing[price]"
              placeholder="Price"
              class="form-control"
              required
            />
            <div class="invalid-feedback">Price Should be valid</div>
          </div>
        </div>

        <button class="btn add-btn btn-dark">Add Product</button>
      </form>
    </div>
  </div>
</body>
<br /><br /><br />
